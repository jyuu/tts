<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :username, autofocus: true, class: "form-control half-width", placeholder: "Username" %> 
  </div> 
 

  <div class="form-group"> 
    <%= f.email_field :email, class: "form-control half-width", placeholder: "Email Address Please" %>
  </div> 

  <div class="form-group"> 
    <%= f.password_field :password, class: "form-control half-width", placeholder: "Password (8 chc minimum)", autocomplete: "off"%>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control half-width", placeholder: "Password Confirmation", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
