

<p id="notice"><%= notice %></p>

<div class = "panel panel-primary">
	<div class = "panel-heading"> 
		<%= @blog_post.title %> 
	</div> 
	<div class = "panel-body"> 
		<p> <strong><%= @blog_post.author %></strong> <span class="posted-at">posted at <%= @blog_post.updated_at.strftime("%A, %B, %e, %Y at %I:%M") %> </span></p> 
		<p> <%= @blog_post.blog_entry %> </p> 
	</div>
</div> 

<div class = "panel panel-success"> 
	<div class = "panel-heading">
		Make a comment 
	</div>  
	<div class = "panel-body">
		<%= render 'comments/form' %> 
	</div>
</div> 

<div class = "panel panel-primary"> 
	<div class = "panel-heading"> 
		<h4> Comments </h4> 
	</div> 
	<% @blog_post.comments.each do |comment| %> 
	<div class="panel-body"> 
		<p><strong><%= comment.author %></strong> <span class="posted-at">said <%= time_ago_in_words(comment.updated_at) %> ago:</span></p>  
		<p><%= comment.comment_entry %></p> 
	</div>
	<% end %> 
</div> 

<div> 
	<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> | 
	<%= link_to 'Back', blog_posts_path %> 
</div>