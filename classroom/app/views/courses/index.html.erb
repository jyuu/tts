<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>




<table class="table">
  <thead>
    <tr>
      <th>Student </th>
      <th>Teacher </th>
      <th>Pet </th>
      <th>Grade </th>
      <th>Profile Pic</th> 
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.student %></td>
        <td><%= course.teacher %></td>
        <td><%= course.pet %></td>
        <td><%= course.grade %></td>
        <td><% if course.avatar_file_name != nil %>
          <%= image_tag course.avatar.url(:thumb), class: "img-responsive" %>
          <% end %>
        </td> 
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Remove', course.avatar_file_name, method: :delete_avatar, data: { confirm: 'Are you sure?' } %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

